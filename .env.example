# Environment Variables for Ndotoni Frontend
# Copy this file to .env.local and fill in your values

# AWS Cognito Configuration
NEXT_PUBLIC_USER_POOL_ID=us-west-2_XXXXXXXXX
NEXT_PUBLIC_USER_POOL_CLIENT_ID=your_client_id_here

# Cognito OAuth Configuration
NEXT_PUBLIC_COGNITO_DOMAIN=your-app-domain.auth.us-west-2.amazoncognito.com
NEXT_PUBLIC_REDIRECT_SIGN_IN=http://localhost:3000/auth/callback
NEXT_PUBLIC_REDIRECT_SIGN_OUT=http://localhost:3000

# GraphQL API Configuration
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://your-api-id.appsync-api.us-west-2.amazonaws.com/graphql
NEXT_PUBLIC_GRAPHQL_REGION=us-west-2
NEXT_PUBLIC_API_KEY=da2-your_api_key_here

# Optional: Build optimizations (uncomment to speed up dev builds)
# NEXT_SKIP_TYPE_CHECK=true
# NEXT_SKIP_LINT=true