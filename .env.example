# ============================================
# FEATURE FLAGS - Property Caching System
# ============================================
# Enable CloudFront property JSON cache (single property pages)
# When enabled: Tries to load property from CloudFront first, falls back to GraphQL
# When disabled: Always uses GraphQL
# DEFAULT: true (enabled for better performance)
NEXT_PUBLIC_ENABLE_PROPERTY_CACHE=true

# Enable district search feed cache (search results)
# When enabled: Loads search results from pre-generated CloudFront feeds
# When disabled: Always queries GraphQL for search results
# DEFAULT: true (enabled for better performance)
NEXT_PUBLIC_ENABLE_DISTRICT_SEARCH_CACHE=true

# Cache-first strategy (recommended: true)
# When enabled: Try cache first, fallback to GraphQL on miss
# When disabled: Always use GraphQL (ignores cache)
# DEFAULT: true (enabled for better performance)
NEXT_PUBLIC_CACHE_FIRST_STRATEGY=true

# Real-time property updates via subscriptions (default: true)
NEXT_PUBLIC_ENABLE_PROPERTY_SUBSCRIPTIONS=true

# Lazy loading for images and components (default: true)
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true

# Future features (not yet implemented)
NEXT_PUBLIC_ENABLE_PROPERTY_COMPARISON=false
NEXT_PUBLIC_ENABLE_SAVED_SEARCHES=false

# Optional: Build optimizations (uncomment to speed up dev builds)
# NEXT_SKIP_TYPE_CHECK=true
# NEXT_SKIP_LINT=true